<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/background_color"
    >
<ScrollView
    android:layout_marginLeft="15dp"
    android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/photo_user"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/ic_edicion_partido"
                    android:layout_gravity="center"
                    android:contentDescription="@string/descripcion_foto_perfil"
                    android:backgroundTint="?colorPrimary"/>

                <Button
                    android:id="@+id/edit_photo"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_edit"
                    android:layout_alignParentBottom="true"
                    android:layout_alignRight="@+id/photo_user"
                    android:layout_alignEnd="@+id/photo_user"
                    android:backgroundTint="?colorPrimary"
                    android:visibility="gone"/>

            </RelativeLayout>

            <TextView
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/username"/>

            <EditText
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:id="@+id/editUsername"
                android:hint="@string/usernameEjemplo"
                android:enabled="false"/>


            <TextView
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/nombre"/>

            <EditText
                android:textColorHint="@color/black"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName|textCapWords"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZáéíóúÁÉÍÓÚ"
                android:singleLine="true"
                android:textColor="@color/black"
                android:hint="@string/nombreEjemplo"
                android:id="@+id/editNombre"
                android:enabled="false"/>

            <TextView
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/apellido"/>

            <EditText
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:layout_width="fill_parent"
                android:hint="@string/apellidoEjemplo"
                android:layout_height="wrap_content"
                android:inputType="textPersonName|textCapWords"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZáéíóúÁÉÍÓÚ"
                android:singleLine="true"
                android:id="@+id/editApellido"
                android:enabled="false"/>

            <TextView
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/correo"/>

            <EditText
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:layout_width="fill_parent"
                android:hint="@string/correoEjemplo"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:inputType="textEmailAddress"
                android:id="@+id/editEmail"
                android:enabled="false"/>

            <TextView
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/cargo"/>

            <EditText
                android:layout_width="fill_parent"
                android:hint="@string/cargoEjemplo"
                android:textColorHint="@color/black"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:id="@+id/editCargo"
                android:enabled="false"
                android:textColor="@color/black"/>

            <TextView
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/estadoSuscripcion"/>

            <TextView
                android:id="@+id/valueEstado"
                android:text="@string/estadoEjemplo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_18sp"
                />

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinEstado"
                android:visibility="gone"/>

            <TextView
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/municipioSuscripcion"/>

            <TextView
                android:id="@+id/valueMunicipio"
                android:text="@string/municipioEjemplo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_18sp"
                />

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinMunicipio"
                android:visibility="gone"/>

            <TextView
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/parroquiaSuscripcion"/>
            
            <TextView
                android:id="@+id/valueParroquia"
                android:text="@string/parroquiaEjemplo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_18sp"
                />
            
            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinParroquia"
                android:visibility="gone"/>


            <TextView
                android:textSize="16dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/comitePertenencia"/>

            <TextView
                android:id="@+id/valueComite"
                android:text="@string/comiteEjemplo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_18sp"
                />

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinComite"
                android:visibility="gone"/>

            <TextView
                android:textSize="16dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/rol_spinner_label"/>

            <TextView
                android:id="@+id/valueRol"
                android:text="@string/rolEjemplo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_18sp"
                />

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinRol"
                android:visibility="gone"/>

            <TextView
                android:layout_marginTop="10dp"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/puntos_trivia"
                />

            <TextView
                android:id="@+id/puntos_trivia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/puntosEjemplo"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_18sp"
                />

            <TextView
                android:layout_marginTop="10dp"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/puntos_actividades"
                />

            <TextView
                android:id="@+id/puntos_activismo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/puntosEjemplo"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_18sp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="25dp">

                <Button
                    android:id="@+id/buttonEditar"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/editar"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    />

                <Button
                    android:id="@+id/buttonGuardar"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/guardar"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/buttonCancelar"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cancelar"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/buttonEliminar"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/eliminar"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>