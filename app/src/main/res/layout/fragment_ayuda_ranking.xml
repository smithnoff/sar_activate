<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:background="@color/white"
    tools:context="com.example.usuario.soyactivista.fragments.FragmentAyudaTop5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/help_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:layout_marginBottom="10dp"
            android:text="@string/ranking_national_help"
            android:textColor="@color/black"
            android:textSize="15dp"
            />

        <TextView
            android:id="@+id/color_help_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/color_help_text"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_below="@+id/help_text"
            />

        <ImageView
            android:id="@+id/circulo_8000"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/circulo"
            android:layout_below="@+id/color_help_text"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/text_8000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_8000"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/color_help_text"
            android:layout_toRightOf="@+id/circulo_8000"
            />

        <ImageView
            android:id="@+id/circulo_6000"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/circulo"
            android:layout_below="@+id/circulo_8000"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/text_6000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_6000"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_marginTop="23dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/text_8000"
            android:layout_toRightOf="@+id/circulo_6000"
            />

        <ImageView
            android:id="@+id/circulo_4000"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/circulo"
            android:layout_below="@+id/circulo_6000"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/text_4000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_4000"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_marginTop="23dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/text_6000"
            android:layout_toRightOf="@+id/circulo_4000"
            />

        <ImageView
            android:id="@+id/circulo_1000"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/circulo"
            android:layout_below="@+id/circulo_4000"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/text_1000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_1000"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_marginTop="23dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/text_4000"
            android:layout_toRightOf="@+id/circulo_1000"
            />

        <ImageView
            android:id="@+id/circulo_0"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/circulo"
            android:layout_below="@+id/circulo_1000"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/text_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_0"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_marginTop="23dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/text_1000"
            android:layout_toRightOf="@+id/circulo_0"
            />

        <Button
            android:id="@+id/back_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/regresar"
            android:textColor="@color/white"
            android:layout_below="@+id/text_0"
            android:layout_marginTop="15dp"
            />


    </RelativeLayout>



</ScrollView>
