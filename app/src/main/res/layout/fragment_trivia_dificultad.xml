<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="?colorPrimary"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.04"
        android:layout_marginTop="25dp"
        android:weightSum="1">

        <ImageView
            android:layout_marginLeft="25dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/ic_trivia_formacion"
            android:layout_gravity="center_vertical"/>
        <View
            android:layout_width="1dp"
            android:layout_height="100dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@color/white"
            android:layout_gravity="center_vertical"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trivia"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/valueNombrePartido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nombrePartido"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:textSize="18dp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textElegirDificultad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/elegirDificultad"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_18sp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/btnFacil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:text="@string/dificultadFacil"
        android:textColor="@android:color/black"
        android:background="@color/white"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/btnIntermedio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:text="@string/dificultadIntermedio"
        android:textColor="@android:color/black"
        android:background="@color/white"
        android:textSize="18sp"/>
    <Button
        android:id="@+id/btnDificil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:text="@string/dificultadDificil"
        android:textColor="@android:color/black"
        android:background="@color/white"
        android:textSize="18sp" />

</LinearLayout>